{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"es5",
			"es6",
			"dom"
		],
		"jsx": "react",
		"outDir": "./dist",
		"strict": true,
		"strictPropertyInitialization": false,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true
	},
	"include": [
		"./src/**/*"
	]
}